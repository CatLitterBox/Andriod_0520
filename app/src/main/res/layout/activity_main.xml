<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.catlittlebox04.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/statisticsBtn"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:background="@drawable/app_main_icon_statistics"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/calenderBtn"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:background="@drawable/app_main_icon_calendar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/settingsBtn"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/calenderBtn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/app_main_icon_settings"
            android:layout_alignTop="@+id/calenderBtn" />

    </RelativeLayout>

</RelativeLayout>
